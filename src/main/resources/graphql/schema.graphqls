scalar LocalDate

type Book {
  id: ID
  title: String
  author: String
  publishedDate: LocalDate
}

input BookFilter{
    title: String
    author: String
    publishedDate: String
}

type Query {
    allBook: [Book]
    getBookByTitle(filter: BookFilter): Book
}

type Mutation {
    addBook(filter: BookFilter): Book
    removeBook(id: Int!) : Boolean
    editBook(id: Int! , bookFilter:BookFilter): Book
}
